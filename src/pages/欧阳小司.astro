---
const posts = await Astro.glob("./posts/*.md");
const name = "欧阳小司";

// Sort posts by date, newest first
posts.sort(
    (a, b) =>
        new Date(b.frontmatter.date).valueOf() -
        new Date(a.frontmatter.date).valueOf(),
);
---

<html lang="zh-CN">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>{name}</title>
    </head>

    <body>
        {/* 顶部导航栏 */}
        <header class="topbar">
            <div class="topbar-inner">
                <a class="brand" href="/">Zhenghao Lu</a>
                <nav class="nav">
                    <a href="/blog">Blog</a>
                    <a href="/resume">Resume</a>
                    <a href="/欧阳小司" style="opacity: 1; font-weight: 600;"
                        >欧阳小司</a
                    >
                </nav>
            </div>
        </header>

        <main class="container">
            <h1>文章列表</h1>
            <ul class="post-list">
                {
                    posts.map((post) => (
                        <li>
                            <a href={post.url} class="post-link">
                                <span class="post-title">
                                    {post.frontmatter.title}
                                </span>
                                <span class="post-date">
                                    {post.frontmatter.date}
                                </span>
                            </a>
                        </li>
                    ))
                }
            </ul>
        </main>

        <style>
            /* 全局样式 */
            :global(*),
            :global(*::before),
            :global(*::after) {
                box-sizing: border-box;
            }

            :global(html, body) {
                min-height: 100%;
                margin: 0;
                background: #fff;
                font-family:
                    system-ui,
                    -apple-system,
                    BlinkMacSystemFont,
                    "Segoe UI",
                    Roboto,
                    sans-serif;
            }

            /* 顶栏 */
            .topbar {
                position: fixed;
                top: 0;
                left: 0;
                right: 0;
                background: #fff;
                border-bottom: 1px solid #eee;
                z-index: 100;
            }
            .topbar-inner {
                max-width: 900px;
                margin: 0 auto;
                padding: 14px 24px;
                display: flex;
                align-items: center;
                justify-content: space-between;
            }
            .brand {
                text-decoration: none;
                color: #111;
                font-weight: 600;
                font-size: 14px;
                opacity: 0.9;
                white-space: nowrap;
            }
            .nav {
                display: flex;
                gap: 16px;
                align-items: center;
            }
            .nav a {
                text-decoration: none;
                color: #111;
                font-size: 14px;
                opacity: 0.75;
                line-height: 1;
                display: flex;
                align-items: center;
            }
            .nav a:hover {
                opacity: 1;
            }

            /* 主要内容区域 */
            .container {
                max-width: 700px;
                margin: 0 auto;
                padding: 96px 24px 48px; /* 顶部留出导航栏空间 */
            }

            h1 {
                font-size: 24px;
                margin-bottom: 32px;
                font-weight: 600;
            }

            .post-list {
                list-style: none;
                padding: 0;
                margin: 0;
            }

            .post-list li {
                margin-bottom: 16px;
                border-bottom: 1px solid #f5f5f5;
                padding-bottom: 16px;
            }

            .post-list li:last-child {
                border-bottom: none;
            }

            .post-link {
                display: flex;
                justify-content: space-between;
                align-items: center;
                text-decoration: none;
                color: #333;
                transition: color 0.2s;
            }

            .post-link:hover {
                color: #000;
            }

            .post-link:hover .post-title {
                text-decoration: underline;
            }

            .post-title {
                font-size: 16px;
                font-weight: 500;
            }

            .post-date {
                font-size: 14px;
                color: #888;
                font-feature-settings: "tnum";
            }
        </style>
    </body>
</html>
