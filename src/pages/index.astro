---
const name = "Zhenghao Lu<";
const email = "zhenghao_lu@outlook.com";
---

<html lang="zh-CN">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{name}</title>
  </head>

  <body>
    {/* 顶部导航栏 */}
    <header class="topbar">
      <div class="topbar-inner">
        <a class="brand" href="/">{name}</a>
        <nav class="nav">
          <a href="/blog">Blog</a>
          <a href="/resume">Resume</a>
        </nav>
      </div>
    </header>

    {/* 主要内容区域：展示名字和联系方式 */}
    <main class="center">
      <div class="stack">
        <div class="name">{name}</div>
        <div class="sub">{email}</div>
      </div>
    </main>

    <style>
      /* 全局样式：去除默认边距，设置背景色，隐藏滚动条 */
      :global(html, body) {
        height: 100%;
        margin: 0;
        background: #fff;
        overflow: hidden; /* 隐藏由于内容少而出现的多余滚动条，或者强制单屏显示 */
        font-family: Arial, sans-serif; /* 设置全局字体为 Arial */
      }

      /* 顶栏 */
      .topbar {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        background: #fff;
        border-bottom: 1px solid #eee;
      }
      .topbar-inner {
        max-width: 900px;
        margin: 0 auto;
        padding: 14px 24px;
        display: flex;
        align-items: center;
        justify-content: space-between;
      }
      .brand {
        text-decoration: none;
        color: #111;
        font-weight: 600;
        font-size: 14px;
        opacity: 0.9;
        white-space: nowrap;
      }
      .nav {
        display: flex;
        gap: 16px;
      }
      .nav a {
        text-decoration: none;
        color: #111;
        font-size: 14px;
        opacity: 0.75;
      }
      .nav a:hover {
        opacity: 1;
      }

      .center {
        height: 100%;
        display: grid;
        place-items: center;
        padding: 24px;
        /* 给固定顶栏让位 */
        padding-top: 72px;
      }

      .stack {
        text-align: center;
        line-height: 1.5;
      }

      .name {
        font-size: 16pt; /* 名字字号改为 16磅 */
        font-weight: 600;
        letter-spacing: 0.02em;
        margin-bottom: 10px;
      }

      .sub {
        font-size: 11pt; /* 联系方式调整为 11磅，保持视觉层级 */
        opacity: 0.85;
      }
    </style>
  </body>
</html>
